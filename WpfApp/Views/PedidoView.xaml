<UserControl x:Class="WpfApp.Views.PedidoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:WpfApp.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Lista de Pedidos" Margin="0,0,10,0">
            <DataGrid ItemsSource="{Binding Items}" 
                      SelectedItem="{Binding SelectedItem}"
                      Margin="0"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Pessoa" Binding="{Binding Pessoa.Nome}" Width="*"/>
                    <DataGridTextColumn Header="Produtos" Binding="{Binding ProdutosResumo}" Width="2*"/>
                    <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=C2}" Width="Auto"/>
                    <DataGridTextColumn Header="Data Venda" Binding="{Binding DataVenda, StringFormat='dd/MM/yyyy HH:mm'}" Width="Auto"/>
                    <DataGridTextColumn Header="Forma Pgto" Binding="{Binding FormaPagamento}" Width="Auto"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>


        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <DockPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" DockPanel.Dock="Top">
                    <Button Content="Novo Pedido" Command="{Binding NewCommand}" Margin="0"/>
                    <Button Content="Finalizar Pedido" Command="{Binding FinalizarPedidoCommand}" IsEnabled="{Binding CurrentItem.PodeSerEditado}"/>
                </StackPanel>

                <GroupBox Header="Detalhes do Pedido" DockPanel.Dock="Top">
                    <Grid IsEnabled="{Binding CurrentItem.PodeSerEditado}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Pessoa:"/>
                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  ItemsSource="{Binding Pessoas}" 
                                  SelectedItem="{Binding CurrentItem.Pessoa}"
                                  DisplayMemberPath="Nome"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Forma Pgto:"/>
                        <ComboBox Grid.Row="1" Grid.Column="1"
                                  ItemsSource="{Binding FormasPagamento}" 
                                  SelectedItem="{Binding CurrentItem.FormaPagamento}"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Adicionar Produto" IsEnabled="{Binding CurrentItem.PodeSerEditado}" DockPanel.Dock="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Produto:"/>
                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  ItemsSource="{Binding ProdutosDisponiveis}" 
                                  SelectedItem="{Binding NovoItem.Produto}"
                                  DisplayMemberPath="Nome"
                                  Margin="0"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Quantidade:"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NovoItem.Quantidade}" Margin="0"/>

                        <Button Grid.Row="1" Grid.Column="2" Content="Adicionar" Command="{Binding AddItemCommand}" Padding="10,5" Margin="5,0,0,0"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Itens do Pedido" DockPanel.Dock="Top">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,10" DockPanel.Dock="Top">
                            <TextBlock Text="Valor Total:" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="{Binding CurrentItem.ValorTotal, StringFormat=C2}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource PrimaryBrush}" Margin="5,0,0,0"/>
                        </StackPanel>

                        <DataGrid ItemsSource="{Binding CurrentItem.Produtos}" 
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Margin="0"
                                  Height="150">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Ação" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Remover" 
                                                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.RemoveItemCommand}"
                                                    CommandParameter="{Binding}"
                                                    IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.CurrentItem.PodeSerEditado}"
                                                    Style="{StaticResource DangerButtonStyle}"
                                                    Padding="5,2" Margin="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Produto" Binding="{Binding Produto.Nome}" Width="*"/>
                                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="Auto"/>
                                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C2}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>

            </DockPanel>
        </ScrollViewer>
    </Grid>
</UserControl>